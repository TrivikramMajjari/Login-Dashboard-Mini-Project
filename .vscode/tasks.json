{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run .NET Backend",
			"type": "shell",
			"command": "cd /workspaces/Login-Dashboard-Mini-Project/LoginDashboardProject/backend && dotnet run",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Run Angular Frontend",
			"type": "shell",
			"command": "cd /workspaces/Login-Dashboard-Mini-Project/LoginDashboardProject/frontend && npm start -- --host 0.0.0.0 --disable-host-check",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}